{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Scatterplot with a 30-day rolling mean for Biden (D) and Trump (R) approval ratings.",
    "width": 1000,
    "height": 400,
    "title": "Biden Vs. Trump Approval Ratings Pre-Election",
    "data": {"url": "https://raw.githubusercontent.com/yeliaBuaL/US_election_2020_dataset/main/polls.csv"},
    "transform": [
      {
        "window": [
          {
            "field": "Biden (D)",
            "op": "mean",
            "as": "rolling_mean_biden"
          },
          {
            "field": "Trump (R)",
            "op": "mean",
            "as": "rolling_mean_trump"
          }
        ],
        "frame": [-15, 15]
      }
    ],
    "encoding": {
      "x": {
        "field": "Start Date",
        "type": "temporal",
        "title": "Date",
        "axis": {"format": "%B"} 
      },
      "y": {
        "field": "Biden (D)",
        "type": "quantitative",
        "title": "Poll Share (%)",
        "scale": {"domain": [30, 60]}
      }
    },
    "layer": [
      {
        "mark": {"type": "point", "opacity": 0.3, "color": "blue"},
        "encoding": {
          "y": {"field": "Biden (D)"},
          "legend": {"title": "Biden (D)"}
        }
      },
      {
        "mark": {"type": "line", "color": "blue", "size": 3},
        "encoding": {
          "y": {"field": "rolling_mean_biden"},
          "tooltip": [
            {"field": "Start Date", "type": "temporal", "title": "Date"},
            {"field": "rolling_mean_biden", "type": "quantitative", "title": "Average Poll Share (%)"}
          ]
        }
      },
      {
        "mark": {"type": "point", "opacity": 0.3, "color": "red"},
        "encoding": {
          "y": {"field": "Trump (R)"},
          "legend": {"title": "Trump (R)"}
        }
      },
      {
        "mark": {"type": "line", "color": "red", "size": 3},
        "encoding": {
          "y": {"field": "rolling_mean_trump"},
          "tooltip": [
            {"field": "Start Date", "type": "temporal", "title": "Date"},
            {"field": "rolling_mean_trump", "type": "quantitative", "title": "Average Poll Share (%)"}
          ]
        }
      },
      {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": 0,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "black"
        },
        "encoding": {
            "x": {
                "value": 150
            },
            "y": {
                "value": 300
            },
            "text": {
                "value": "Trump Declares Pandemic"
            },
            "color": {"value": "black"}
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": 0,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "black"
        },
        "encoding": {
            "x": {
                "value": 150
            },
            "y": {
                "value": 315
            },
            "text": {
                "value": "National Emergency"
            },
            "color": {"value": "black"}
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": 0,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "black"
        },
        "encoding": {
            "x": {
                "value": 325
            },
            "y": {
                "value": 140
            },
            "text": {
                "value": "George Floyd Dies"
            },
            "color": {"value": "black"}
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": 0,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "black"
        },
        "encoding": {
            "x": {
                "value": 810
            },
            "y": {
                "value": 275
            },
            "text": {
                "value": "Trump tests positive"
            },
            "color": {"value": "black"}
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "dx": 0,
            "dy": -10,
            "fontSize": 12,
            "fontWeight": "bold",
            "color": "black"
        },
        "encoding": {
            "x": {
                "value": 810
            },
            "y": {
                "value": 290
            },
            "text": {
                "value": "For COVID-19"
            },
            "color": {"value": "black"}
        }
    }
    ]
  }
  